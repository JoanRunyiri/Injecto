<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/bluemarble">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilephoto"

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/profilepic"
                            >
                        </de.hdodenhof.circleimageview.CircleImageView>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/selectphoto"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/uploadimage">

                        </de.hdodenhof.circleimageview.CircleImageView>

                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">


                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/edit" />
                        <TextView
                            android:id="@+id/editprofile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:paddingTop="10dp"
                            android:textColor="#0B0A0A"
                            android:text="Edit Profile"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/child_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child Information"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/txt_name"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/childname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:hint="Name"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Date Of Birth"
                            android:textColor="@color/black"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/Dob"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/childdob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:hint="Date of Birth"
                        android:inputType="date"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="Age of Child"
                            android:textColor="@color/black"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/Age"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/childage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:hint="Age of Child"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/parent_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parent Information"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Parent Name"
                                android:textColor="@color/black"
                                android:layout_marginLeft="8dp"
                                android:id="@+id/parent_name"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/parentname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:hint="Name"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:layout_marginRight="15dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Phone Number"
                                android:textColor="@color/black"
                                android:layout_marginLeft="8dp"
                                android:id="@+id/phone_number"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:layout_marginRight="15dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Email"
                                android:textColor="@color/black"
                                android:layout_marginLeft="8dp"
                                android:id="@+id/Email"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/parentemail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:layout_marginRight="15dp"/>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="15dp">


                        <Button
                            android:id="@+id/btn_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#2196F3"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Save"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/signout"
                            android:layout_width="75dp"
                            android:layout_height="20dp"
                            android:textStyle="bold"
                            android:text="Sign Out" />

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

